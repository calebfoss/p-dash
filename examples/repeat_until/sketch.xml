<canvas
  width="400"
  height="400"
  is="p-canvas"
  background="220"
  loop="false"
>
  <_
    x="0"
    width="canvas.width / 10"
    change="x: x + width"
    repeat="until x at_least canvas.width"
  >
    <rect y="0" height="canvas.height / 10" change="y: y + height"
      repeat="until y at_least canvas.height"></rect>
  </_>
</canvas>