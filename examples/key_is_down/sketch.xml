<!-- https://p5js.org/reference/#/p5/keyIsDown -->
<canvas width="512" height="512">
    <clear></clear>
    <ellipse
        x="100" y="100"
        width="50" height="50"
        fill="255, 0, 0"
        player="this_element">
        <_ on="key_is_down(LEFT_ARROW)" player.x="player.x - 5"></_>
        <_ on="key_is_down(RIGHT_ARROW)" player.x="player.x + 5"></_>
        <_ on="key_is_down(UP_ARROW)" player.y="player.y - 5"></_>
        <_ on="key_is_down(DOWN_ARROW)" player.y="player.y + 5"></_>
    </ellipse>
</canvas>