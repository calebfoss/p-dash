<?xml version="1.0" encoding="UTF-8"?>
<!-- https://p5js.org/reference/#/p5/noLights -->
<canvas-3d width="100" height="100"
    background="200" stroke="NONE" loop="false">
    <ambient-light v1="255" v2="0" v3="0">
        <sphere anchor="-30, 0, 0"
            radius="13"
            ambient_material="255">
            <_-3d no_lights="true">
                <sphere anchor="30, 0, 0" radius="13"
                    ambient_material="255"
                >
                    <ambient-light v1="0" v2="255" v3="0">
                        <sphere anchor="30, 0, 0" radius="13"
                            ambient_material="255"></sphere>
                    </ambient-light>
                </sphere>
            </_-3d>
        </sphere>
    </ambient-light>
</canvas-3d>