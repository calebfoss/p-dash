<?xml version="1.0" encoding="UTF-8"?>
<canvas width="400" height="400" background="220" loop="false" margin="10">
    <text x="margin" y="margin" width="width - margin" height="height - margin"
        align="random([LEFT, CENTER, RIGHT])"
        font_size="random(10, 30)" leading="random(font_size, font_size * 2)"
        style="random([NORMAL, ITALIC, BOLDITALIC])">
        This is a demonstration of the text element. This element has the following attributes:\n
        align: $align\n
        font_size: $font_size\n
        leading: $leading\n
        style: $style\n
    </text>
</canvas>