<?xml version="1.0" encoding="UTF-8"?>
<canvas-3d width="100" height="100" background="0"
    ortho="true"
    stroke="NONE"
> Two spheres with different falloff values show different intensity of light <_
        loc_x="mouse.x - width / 2"
        loc_y="mouse.y - height / 2"
        v1="250" v2="250" v3="250">
        <point-light
            x="loc_x - 25"
            y="loc_y"
            z="50"
            light_falloff="1, 0, 0">
            <sphere anchor="-25, 0, 0" radius="20"></sphere>
        </point-light>
        <point-light
            x="loc_x + 25"
            y="loc_y"
            z="50"
            light_falloff="0.97, 0.03, 0">
            <sphere anchor="25, 0, 0" radius="20"></sphere>
        </point-light>
    </_>

</canvas-3d>