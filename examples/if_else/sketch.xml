<canvas
  width="400"
  height="400"
  stroke="NONE"
  background="200"
>
  <_ diameter="width" anchor="width/2, height/2">
    <circle
      fill="'red'"
      on="frame_count LESS_THAN 60"
    ></circle>
    <circle
      fill="'yellow'"
      on="above_siblings_off AND frame_count LESS_THAN 120"
    ></circle>
    <circle
      fill="'green'"
      on="above_siblings_off"
    ></circle>
  </_>
</canvas>