<canvas
  width="400"
  height="400"
  stroke_color="NONE"
  canvas_background="200"
>
  <_ d="width" anchor="width/2, height/2">
    <circle
      fill_color="'red'"
      on="frame_count LESS_THAN 60"
    ></circle>
    <circle
      fill_color="'yellow'"
      on="above_siblings_off AND frame_count LESS_THAN 120"
    ></circle>
    <circle
      fill_color="'green'"
      on="above_siblings_off"
    ></circle>
  </_>
</canvas>