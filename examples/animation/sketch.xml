<canvas
    width="400"
    height="400"
    background="220"
>
    <square x="width / 2" y="height / 2" size="width / 5"
        speed_x="3" speed_y="2"
    >
        <_ on="x AT_LEAST canvas.width - size || x NO_MORE_THAN 0"
            parent.speed_x="-speed_x" />
        <_ on="y AT_LEAST canvas.height - size || y NO_MORE_THAN 0"
            parent.speed_y="-speed_y" />
        <_
            parent.x="x + speed_x"
            parent.y="y + speed_y"
        />

    </square>
</canvas>