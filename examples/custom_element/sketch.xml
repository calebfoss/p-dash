<_>
    <custom name="cloud" stroke_color="NONE">
        <_ anchor="x, y">
            <circle x="-d/2" y="-d/4" fill_color="220"></circle>
            <circle x="-d/2" y="-d/4" fill_color="210"></circle>
            <circle x="-d/4" y="-d/2" fill_color="250"></circle>
            <circle x="d/4" y="-d/2" fill_color="210"></circle>
            <circle x="0" y="0" fill_color="180"></circle>
            <circle x="d/2" y="0" fill_color="200"></circle>
            <circle x="-d/2" y="0" fill_color="240"></circle>
            <circle x="0" y="-d/8" fill_color="235"></circle>
        </_>
    </custom>
    <canvas
        width="400"
        height="400"
        canvas_background="100, 140, 200"
    >
        <_ start_x="0" clouds="this_element">
            <cloud
                y="75"
                x="start_x - width * 0.25"
                d="40"
                change="x: x + width * 0.25"
                repeat="WHILE x LESS_THAN width"
            >
            </cloud>
            <_ clouds.start_x="clouds.start_x + 0.25">
                <_ on="clouds.start_x AT_LEAST width * 0.25" clouds.start_x="0"></_>
            </_>
        </_>
    </canvas>
</_>