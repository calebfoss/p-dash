<_>
    <_ name="cloud" stroke="NONE">
        <_ anchor="x, y">
            <circle x="-diameter/2" y="-diameter/4" fill="220"></circle>
            <circle x="-diameter/2" y="-diameter/4" fill="210"></circle>
            <circle x="-diameter/4" y="-diameter/2" fill="250"></circle>
            <circle x="diameter/4" y="-diameter/2" fill="210"></circle>
            <circle x="0" y="0" fill="180"></circle>
            <circle x="diameter/2" y="0" fill="200"></circle>
            <circle x="-diameter/2" y="0" fill="240"></circle>
            <circle x="0" y="-diameter/8" fill="235"></circle>
        </_>
    </_>
    <canvas
        width="400"
        height="400"
        background="100, 140, 200"
    >
        <_ start_x="0">
            <cloud
                y="75"
                x="start_x - width * 0.25"
                diameter="40"
                change="x: x + width * 0.25"
                repeat="x less than width"
            >
            </cloud>
            <_ parent.start_x="start_x + 0.25" />
            <_ on="start_x at least width * 0.25" parent.start_x="0"></_>
        </_>
    </canvas>
</_>